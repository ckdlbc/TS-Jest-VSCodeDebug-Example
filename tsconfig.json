{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "outDir": "build/",
    "pretty": true,
    "sourceMap": true,
    "plugins": [{ "name": "tslint-language-service", "ignoreDefinitionFiles": true }]
  },
  "include": ["src/**/*"]
}
